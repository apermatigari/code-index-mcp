{
  "inputs": [
    {
      "type": "promptString",
      "id": "project-path",
      "description": "Path to the project you want to index",
      "default": "."
    }
  ],
  "servers": {
    "CodeIndexer": {
      "type": "stdio",
      "command": "python",
      "args": ["-m", "code_index_mcp.server"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    }
  }
} 